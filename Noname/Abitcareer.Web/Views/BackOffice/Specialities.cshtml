@using Abitcareer.Mvc.ViewModels.LocalizedViewModels
@using System.Web
@using System.Globalization
@using System.Web.Mvc
@using System.Text.RegularExpressions
@using System.Globalization
@model List<SpecialityViewModel>

@section styles
{
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Specialities.css")
}

<h2>@LocalizationResx.Specialities</h2>

<div id="partialView">
    <div id="inner">
    </div>
</div>

<section class="wrapperButton">
    <table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td class="specButton" id="@item.Id">@item.Name</td>
        </tr>
    }
    </table>
</section>
@section Scripts
{
   <script>

       $(function () {
           $('.specButton').click(function () {
               $.ajax("specialities/edit/" + $(this).attr("id"), {
                   method: 'GET'
               }).done(function (data) {
                   $("#inner").html(data);
                   $("#partialView").show();
               });
               
           });
       });

       

    </script>
}