@using Abitcareer.Mvc.ViewModels.LocalizedViewModels
@using System.Web
@using System.Globalization
@using System.Web.Mvc
@using System.Text.RegularExpressions
@model List<SpecialityViewModel>

@section styles
{
    @Styles.Render("~/Content/Specialities.css")
}

<h2>Specialities</h2>

<div id="partialView">
    <div id="inner">
        @Html.Partial("EditPartial", new SpecialityViewModel())
    </div>
</div>

<section class="wrapperButton">
    @foreach (var item in Model)
    {
        
        <button class="specButton" id="@item.Id">@item.Name</button>
        <br>
    }
</section>
@section Scripts
{
   <script>

       $(function () {
           $('.specButton').click(function () {
               $('#partialView').show();
           });
       });

    </script>
}