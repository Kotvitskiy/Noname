@using Abitcareer.Mvc.ViewModels.LocalizedViewModels
@using System.Web
@using System.Globalization
@using System.Web.Mvc
@using System.Text.RegularExpressions
@model SpecialityViewModel

    @using (@Html.BeginForm("Save", "BackOffice", FormMethod.Post, new { @role="form" }))
    {
        <h3>EditSpecialities</h3>
        <input type="button" id="exit"/>
        @Html.HiddenFor(x => x.Id)
        <div><span>Назва: </span>@Html.EditorFor(m => m.Name)</div>
        foreach (var item in Model.Salaries)
        {
            <div>
                <span>Зарплата за </span>@item.Key<span>-й рік: </span>@Html.EditorFor(m => m.Salaries[item.Key])
            </div>
        }
        <input type="submit" class="btn btn-default" value="Зберегти">
    }