@using Abitcareer.Mvc.Extensions
@{
    var routeName = Request.RequestContext.RouteData.GetRouteName();
    var langLink = "#";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/errorhandler.js")
    @Scripts.Render("~/Scripts/googleAnalytics.js")
    <script type="text/javascript">
        Logger.getUrl('@Url.Action("LogJavaScriptError", "Error")');
    </script>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="right mobile-localization-changer">
                    @{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en-US")
                        {
                            langLink = "#";
                        }
                        else
                        {
                            langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "en-US", routeName = routeName });
                        }
                    }
                    <a href="@langLink">
                        <img src="@Url.Content("~/Content/Images/Flags/US.png")" />
                    </a>
                    @{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "uk-UA")
                        {
                            langLink = "#";
                        }
                        else
                        {
                            langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "uk-UA", routeName = routeName });
                        }
                    }
                    <a href="@langLink">
                        <img src="@Url.Content("~/Content/Images/Flags/UA.png")" />
                    </a>
                </div>
                <a class="navbar-brand" href="#">AbitCareer</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @{
                            if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en-US")
                            {
                                langLink = "#";
                            }
                            else
                            {
                                langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "en-US", routeName = routeName });
                            }
                        }
                        <a href="@langLink">
                            <img src="@Url.Content("~/Content/Images/Flags/US.png")" /> English
                        </a>
                    </li>
                    <li>
                        @{
                            if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "uk-UA")
                            {
                                langLink = "#";
                            }
                            else
                            {
                                langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "uk-UA", routeName = routeName });
                            }
                        }
                        <a href="@langLink">
                            <img src="@Url.Content("~/Content/Images/Flags/UA.png")" /> Українська
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="content">
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
    <!-- Yandex.Metrika counter -->
    <script type="text/javascript">
        (function (d, w, c) {
            (w[c] = w[c] || []).push(function () {
                try {
                    w.yaCounter31655915 = new Ya.Metrika({
                        id: 31655915,
                        clickmap: true,
                        trackLinks: true,
                        accurateTrackBounce: true
                    });
                } catch (e) { }
            });

            var n = d.getElementsByTagName("script")[0],
                s = d.createElement("script"),
                f = function () { n.parentNode.insertBefore(s, n); };
            s.type = "text/javascript";
            s.async = true;
            s.src = "https://mc.yandex.ru/metrika/watch.js";

            if (w.opera == "[object Opera]") {
                d.addEventListener("DOMContentLoaded", f, false);
            } else { f(); }
        })(document, window, "yandex_metrika_callbacks");
    </script>
    <noscript><div><img src="https://mc.yandex.ru/watch/31655915" style="position:absolute; left:-9999px;" alt="" /></div></noscript>
    <!-- /Yandex.Metrika counter -->
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
</body>
</html>
