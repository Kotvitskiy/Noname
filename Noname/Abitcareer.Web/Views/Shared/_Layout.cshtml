@using Abitcareer.Mvc.Extensions
@{
    var routeName = Request.RequestContext.RouteData.GetRouteName();
    var langLink = "#";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript">
        var logErrorUrl = '@Url.Action("LogJavaScriptError", "Error")';
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/errorhandler.js")        
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <div class="right mobile-localization-changer">
                    @{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en-US")
                        {
                            langLink = "#";
                        }
                        else
                        {
                            langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "en-US", routeName = routeName });
                        }
                    }
                    <a href="@langLink">
                        <img src="@Url.Content("~/Content/Images/Flags/US.png")" />
                    </a>
                    @{
                        if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "uk-UA")
                        {
                            langLink = "#";
                        }
                        else
                        {
                            langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "uk-UA", routeName = routeName });
                        }
                    }
                    <a href="@langLink">
                        <img src="@Url.Content("~/Content/Images/Flags/UA.png")" />
                    </a>
                </div>     
                <a class="navbar-brand" href="#">AbitCareer</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @{
                            if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en-US")
                            {
                                langLink = "#";
                            }
                            else
                            {
                                langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "en-US", routeName = routeName });
                            }
                        }
                        <a href="@langLink">
                            <img src="@Url.Content("~/Content/Images/Flags/US.png")" /> English
                        </a>
                    </li>
                    <li>
                        @{
                            if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "uk-UA")
                            {
                                langLink = "#";
                            }
                            else
                            {
                                langLink = Url.HttpRouteUrl("ChangeCulture", new { locale = System.Threading.Thread.CurrentThread.CurrentCulture.Name, culture = "uk-UA", routeName = routeName });
                            }
                        }
                        <a href="@langLink">
                            <img src="@Url.Content("~/Content/Images/Flags/UA.png")" /> Українська
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div id="content">
        &nbsp;
        @RenderBody() 
    </div> 
    @RenderSection("scripts", required: false)
    @StackExchange.Profiling.MiniProfiler.RenderIncludes()
</body>
</html>
